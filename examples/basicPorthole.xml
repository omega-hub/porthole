<gui>
    <elements>
        <element id="camera" type="camera_stream" camera="custom"/>
        <element id="caption" type="HTML">
            <p>
                Click on the buttons to move the camera.
            </p>
        </element>
        <element id="left" type="HTML">
            <input type="button" data-role="button" onmouseup="setCameraMoveSpeed(0, 0, 0,%client_id%)" onmousedown="setCameraMoveSpeed(-1, 0, 0,%client_id%)" data-iconpos="notext" data-icon="arrow-l" class="ui-btn ui-btn-icon-notext"/>
        </element>
        <element id="right" type="HTML">
            <input type="button" data-role="button" onmouseup="setCameraMoveSpeed(0, 0, 0,%client_id%)" onmousedown="setCameraMoveSpeed(1, 0, 0,%client_id%)" data-iconpos="notext" data-icon="arrow-r" class="ui-btn ui-btn-icon-notext"/>
        </element>
        <element id="up" type="HTML">
            <input type="button" data-role="button" onmouseup="setCameraMoveSpeed(0, 0, 0,%client_id%)" onmousedown="setCameraMoveSpeed(0, 1, 0,%client_id%)" data-iconpos="notext" data-icon="arrow-u" class="ui-btn ui-btn-icon-notext"/>
        </element>
        <element id="down" type="HTML">
            <input type="button" data-role="button" onmouseup="setCameraMoveSpeed(0, 0, 0,%client_id%)" onmousedown="setCameraMoveSpeed(0, -1, 0,%client_id%)" data-iconpos="notext" data-icon="arrow-d" class="ui-btn ui-btn-icon-notext"/>
        </element>
    </elements>

    <interfaces>
        <interface minWidth="0" minHeight="0" id="default">
            <landscape layout="free">
                <element width="100%" height="100%" id="camera"/>
                <element x="0px" y="80px" id="caption"/>
                <element x="100px" y="132px" id="left"/>
                <element x="164px" y="132px" id="right"/>
                <element x="132px" y="100px" id="up"/>
                <element x="132px" y="164px" id="down"/>
            </landscape>
        </interface>
    </interfaces>
</gui>